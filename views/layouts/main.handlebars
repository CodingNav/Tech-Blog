        <div class="content">
            <div class="columns has-text-centered">
                <div class="column">
                    <p id="footer-logo"><i class="fas fa-asterisk"></i> TECH BLOG</p>
                </div>
                <div id="socials" class="column">
                    <p><b>Follow Us</b></p>
                    <i class="fab fa-twitter"></i>
                    <i class="fab fa-facebook-f"></i>
